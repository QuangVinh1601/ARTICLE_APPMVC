@model AppMVC.Models.Blog.Posts

@{
    ViewData["Title"] = "Xóa bài viết";
}

<h1>Xóa bài viết</h1>

<h3>Bạn có chắc chắn xóa bài viết này không?</h3>
<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="@Model.PostId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay về danh sách bài viết</a>
    </form>
</div>
